<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_facebook"
        android:layout_width="78dp"
        android:layout_height="67dp"
        app:srcCompat="@drawable/pink_and_black_facebook_icon___rosa_icono_facebook_png_transparent_png___800x800___free_download_on_nicepng"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:text="Facebook"
        app:layout_constraintTop_toBottomOf="@+id/profile_facebook"
        app:layout_constraintEnd_toEndOf="@+id/profile_facebook"
        app:layout_constraintStart_toStartOf="@+id/profile_facebook" />
</androidx.constraintlayout.widget.ConstraintLayout>